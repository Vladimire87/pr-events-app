<div class="all-events-container">
<h3>Events</h3>
 <div class="gridtest">
<% @events.each do |event| %>
<div class="box">
  <div class="container">
    <main class="grid">
      <article>
        <div class="text">
          <h3><%= event.event_name %></h3>
          <h5><%= event.event_location %></h5>
          <p><%= event.event_date %></p>
          <p><%= event.event_text %></p>
          <%= link_to "Show", event_path(event)  %>
        </div>
      </article>
    </main>  
  </div>    
</div>
  <% end %>
</div>

</div>
