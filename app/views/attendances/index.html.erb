<style>
  .all-events-container {
    min-width: 340px;
    margin: 0 auto;
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    margin-bottom: 16px;
    margin-left: 16px;
    margin-right: 16px;
  }

  h1 {
    text-align: center;
    font-size: 28px;
    color: #333;
    margin-bottom: 30px;
  }

  h3 {
    font-size: 20px;
    color: #555;
    margin-bottom: 10px;
  }

  hr {
    border: none;
    border-top: 1px solid #ccc;
    margin: 30px 0;
  }

  h2 {
    font-size: 24px;
    color: #333;
    margin-bottom: 20px;
  }

  p {
    font-size: 16px;
    color: #555;
    margin-bottom: 10px;
  }

  .sign-out-button {
    display: inline-block;
    background-color: tomato;
    color: #fff;
    padding: 10px 20px;
    font-size: 16px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }


</style>

<div class="all-events-container">
  <h1>Attendances#index</h1><br><br>

  <div>
    <h3>User: <%= current_user.email %> </h3>
  </div>

  <hr>

  <div>
    <h2>I made this:</h2>
    <% @events_created.each do |event| %>
      <%= content_tag :p, event.event_name %>
    <% end %>
  </div>

  <hr>

  <div>
    <h2>I will go here:</h2>
    <% @attendances.each do |attendance| %>
      <%= content_tag :p, attendance.event.event_name %>
    <% end %>
  </div><br>

  <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "sign-out-button" %>
</div>
